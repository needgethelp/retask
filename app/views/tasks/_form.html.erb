<%= form_for @task, url: task_path, :html => { :multipart => true } do |f| %>
    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, class: 'form-control' %>
    </div>
     <div class="form-group">
   <%= f.select(:id, @user_options)%>
    </div>
     <p>
      <strong>Assignees:</strong>
      <% @assignersList.each do |ass| %>
          <%= ass.profile.first_name %> <%= ass.profile.last_name %>
      <% end %>
    </p>
    
         <p>
      <strong>Fellowers:</strong>
      <% @fellowersList.each do |item| -%>
          <%= item.profile.first_name %> <%=item.profile.last_name %>
        <% end -%>
    </p>
    
    <div class="form-group">
    <%= f.submit "Update Task", class: 'btn btn-primary' , method: :PUT%>
    </div>
    
   
<% end %>
 <div class="form-group">
        <%= link_to "Delete", task_path(@task.id), class: 'btn btn-danger', method: :DELETE %>
</div>
