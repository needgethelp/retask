<%= form_for @task, url: task_path, :html => { :multipart => true } do |f| %>
    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, class: 'form-control' %>
    </div>
   
    
     <p>
      <strong>Assignees:</strong>
      <% @assignersList.each do |item| -%>
          <%= item.profile.first_name %> <%=item.profile.last_name %>
        
        <% end -%>
    </p>
    
         <p>
      <strong>Fellowers:</strong>
      <% @fellowersList.each do |item| -%>
          <%= item.profile.first_name %> <%=item.profile.last_name %>
        <% end -%>
    </p>
    
    <div class="form-group">
    <%= f.submit "Update Task", class: 'btn btn-primary' %>
    </div>
    
    <div class="form-group">
    <%= button_to "Delete Task", task_path(:id), class: 'btn btn-danger', method: :delete %>
    </div>
<% end %>
